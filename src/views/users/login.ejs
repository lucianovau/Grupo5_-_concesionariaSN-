<!DOCTYPE html>
<html>
<head>
  <%- include('.partials/head') %>
  <link rel="stylesheet" href="/css/login.css">
</head>
<body>
  <%- include('../partials/header') %>
  <main>
    <section id="login">
      <h2>Iniciar Sesión</h2>
        <div>
          <form id="Iniciar">
            <input type="email" id="email" name="email" required class="inicio iniput" placeholder="Email">
      
            <input type="contraseña" id="contraseña" name="contraseña" required class="inicio iniput" placeholder="Contraseña">
            
            <p class="inicio">
              <input type="checkbox" id="sesion-iniciada" name="sesion-iniciada" class="iniput"> 
              <label for="sesion-iniciada">Mantener sesión iniciada</label>
            </p>
            
            <button type="submit" class="inicio" id="boton1">Iniciar Sesión</button>

            <p class="inicio">
              <a href="register">No tenes cuenta todavía, registrate acá</a>
            </p>
          </form>
        </div>   
      </section>
      <section id="invitado">
          <h2>Continuar como invitado</h2>
          <button type="submit" id="boton2">Invitado</button>
      </section>
  </main>
 
  <%- include('../partials/footer') %>
</body>
</html>
