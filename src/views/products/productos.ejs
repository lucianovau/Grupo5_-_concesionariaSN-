 <!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
    <link rel="stylesheet" href="/css/productos.css">
</head>
<body>
  <%- include('../partials/header') %>
  <main>
    
    <h1 class="titulo">Productos</h1>
    
    <section class="lista-productos">
      <% productos.forEach((producto=>{ %>
        <article class="producto">
          <img src="<% let img = producto.img.split(' ')  %> <%= img[0] %> " alt="Auto">
          <h2><%= producto.name%></h2>
          <p><%= producto.descripcion %></p>
          <span class="precio"><%= producto.price %> </span>
          <a href="/detalleProd/<%=producto.id%>" class="btn">Ver Detalles</a>
        </article>
      <% })) %>
    </section>
      
    <h1 class="tituloRecomendado">Recomendado para t√≠</h1>
    
    <section class="lista-recomendados">
      <% productos.forEach((producto=>{ %>
        <article class="producto">
          <img src="<% let img = producto.img.split(' ')  %> <%= img[0] %> " alt="Auto">
          <h2><%= producto.name%></h2>
          <p><%= producto.descripcion %></p>
          <span class="precio"><%= producto.price %> </span>
          <a href="/detalleProd/<%=producto.id%>" class="btn">Ver Detalles</a>
        </article>
      <% })) %>   
    
    </section>
    
  </main>
  <%- include('../partials/footer') %>
</body>
</html>

